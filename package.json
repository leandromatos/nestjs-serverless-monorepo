{
  "name": "payment-service",
  "version": "0.0.1",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "lint": "eslint",
    "lint:fix": "yarn lint --fix",
    "clean:build": "rm -rf dist",
    "start:dev": "yarn start:dev:payment-processor & yarn start:dev:find-one-payment-by-id",
    "start:dev:payment-processor": "nest start payment-processor --watch",
    "start:dev:find-one-payment-by-id": "nest start find-one-payment-by-id --watch",
    "start:debug:payment-processor": "nest start payment-processor --debug --watch",
    "start:debug:find-one-payment-by-id": "nest start find-one-payment-by-id --debug --watch",
    "start:debug": "yarn start:debug:payment-processor & yarn start:debug:find-one-payment-by-id",
    "build": "yarn clean:build && yarn build:payment-processor & yarn build:find-one-payment-by-id",
    "build:payment-processor": "nest build payment-processor",
    "build:find-one-payment-by-id": "nest build find-one-payment-by-id",
    "sls:offline:payment-processor": "yarn build:payment-processor && yarn sls offline --service payment-processor",
    "sls:offline:find-one-payment-by-id": "yarn build:find-one-payment-by-id && yarn sls offline --service find-one-payment-by-id",
    "sls:invoke:payment-processor": "yarn build:payment-processor && yarn sls invoke local -f payment-processor --service payment-processor",
    "sls:invoke:find-one-payment-by-id": "yarn build:find-one-payment-by-id && yarn sls invoke local -f find-one-payment-by-id --service find-one-payment-by-id",
    "test": "jest",
    "test:payment-processor": "jest apps/payment-processor",
    "test:find-one-payment-by-id": "jest apps/find-one-payment-by-id",
    "test:watch": "jest --watch",
    "test:watch:payment-processor": "jest apps/payment-processor --watch",
    "test:watch:find-one-payment-by-id": "jest apps/find-one-payment-by-id --watch",
    "test:cov": "jest --coverage",
    "test:cov:payment-processor": "jest apps/payment-processor --coverage",
    "test:cov:find-one-payment-by-id": "jest apps/find-one-payment-by-id --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:debug:payment-processor": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest apps/payment-processor --runInBand",
    "test:debug:find-one-payment-by-id": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest apps/find-one-payment-by-id --runInBand",
    "test:e2e": "jest --config jest-e2e.config.json",
    "test:e2e:payment-processor": "jest --config jest-e2e.config.json apps/payment-processor",
    "test:e2e:find-one-payment-by-id": "jest --config jest-e2e.config.json apps/find-one-payment-by-id"
  },
  "dependencies": {
    "@nestjs/common": "^10.4.12",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.4.12",
    "@nestjs/platform-express": "^10.4.12",
    "@vendia/serverless-express": "^4.12.6",
    "aws-lambda": "^1.0.7",
    "nest-winston": "^1.9.7",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "serverless": "^3.39.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@leandromatos/eslint-config": "^3.0.0-rc.26",
    "@nestjs/cli": "^10.4.8",
    "@nestjs/schematics": "^10.2.3",
    "@nestjs/testing": "^10.4.12",
    "@serverless/compose": "^1.3.0",
    "@types/aws-lambda": "^8.10.146",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.1",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.16.0",
    "jest": "^29.7.0",
    "serverless-dotenv-plugin": "^6.0.0",
    "serverless-offline": "^14.3.4",
    "serverless-offline-sqs": "^8.0.0",
    "supertest": "^7.0.0",
    "terser-webpack-plugin": "^5.3.10",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.2",
    "webpack": "^5.96.1"
  }
}
